{% extends "layout.html.twig" %}

{% block content %}
    <div class="container col-8">
        <h1>My Pets</h1>
        {% for species, pets in petSpecies %}
            <div class="row justify-content-around">
                <h2>The {{ species|title }}s</h2>
                {% for pet in pets %}
                    <div class="col-lg-4 col-md-6 col-sm-12">
                        <div class="card my-2">
                            <img src="http://placekitten.com/g/500/600?image={{ random(0, 16) }}" alt="a cute {{ pet.species }}" class="card-img-top">
                            <div class="card-body">
                                <h2 class="card-title">{{ pet.name }}</h2>
                                <p class="card-text">A cute
                                    {{ pet.species }}
                                    :3</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endfor %}
    </div>
{% endblock %}
